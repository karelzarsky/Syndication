@model Article

<div class="row">
    <div class="col-lg-1 small">@Model.ReceivedUTC.ToLocalTime().ToString("dd.MM.yy HH:mm")</div>
    <div class="col-lg-1 small">@Model.PublishedUTC.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</div>
    <div class="col-lg-1">@(100.00m*(Model.ScoreMin + Model.ScoreMax))</div>
    <div class="col-lg-1">@Model.language</div>
    <div class="col-lg-1 info text-success"><a asp-controller="Home" asp-action="Company" asp-route-id="@Model.Ticker"><strong>@Model.Ticker</strong></a></div>
    <div class="col-lg-7"><a href="@Model.URI_links">@Model.Title</a></div>
</div>
<div class="row">
    <div class="col-lg-12 small">@Model.Summary</div>
</div>
<hr margin="3"/>