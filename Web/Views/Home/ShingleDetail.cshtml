@model ShingleDetailViewModel
@{
    ViewData["Title"] = Model.ShingleEntity.text;
}
<div class="container-fluid">
    <div class="well well-sm">
        <h1 class="text-center"><strong>@Model.ShingleEntity.text</strong></h1>
    </div>
    <div class="well well-lg">
        <div class="row">
            <div class="col-xs-6 col-lg-2 text-warning text-right">ID:</div>
            <div class="col-xs-6 col-lg-2">@Model.ShingleEntity.ID</div>
            <div class="col-xs-6 col-lg-1 text-warning text-right">Kind:</div>
            <div class="col-xs-6 col-lg-2"><strong>@Model.ShingleEntity.kind</strong></div>
            <div class="col-xs-6 col-lg-2 text-warning text-right">Last Recompute:</div>
            <div class="col-xs-6 col-lg-3">@(Model.ShingleEntity.LastRecomputeDate == null ? "" : Model.ShingleEntity.LastRecomputeDate.Value.ToString("dd.MM.yy HH:mm"))</div>
        </div>
    </div>
</div>
